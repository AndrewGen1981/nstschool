    <section class="innerBox">
        <!-- Header -->
        <nav class="headerContainer">
            <section class="headerItem" onclick="document.location='/'">NSTS</section>
        </nav>      <!-- nav class="blogHeader" -->
        <section class="titleContainer">
            <section class="titleText">
                NEW SOUND TRUCKING SCHOOL
            </section>
            <section class="titleText">
                ADMINISTRATION & FACULTY
            </section>
        </section>          <!-- titleContainer -->
        <sectio class="subTitleContainer">
            <section class="subTitleText">
                New Sound Trucking School, LLC is established to assist adult students in obtaining the educa-tion and behind the wheel training needed to obtain Commercial Driving Licenses from the State of Washington’s Department of Licensing
            </section>
        </sectio>           <!-- subTitleContainer -->
        <section class="videoContainerBox">
            <section class="videoPlaceHolder">
                <svg class="vPlay" viewBox="0 0 64 64">
                    <g>
                        <g id="Icon-Play" transform="translate(128.000000, 278.000000)">

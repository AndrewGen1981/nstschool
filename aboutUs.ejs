                        </g>
                    </g>
                </svg>
            </section>        <!-- videoPlaceHolder -->
            <video class="aboutNSTSvideo" onclick="videoClick(this)">
                <source src='./img/adv/about.mp4' type="video/mp4">
            </video>          <!-- videoItem -->
        </section>        <!-- videoContainerBox -->
        <section class="aboutNSTSvideoDesc">
            Click to learn more about New Sound Trucking School
        </section>        <!-- aboutNSTSvideoDesc -->

        <section class="advContainer">
            <section class="advContainerInner">
                <section class="advText">
                    <section class="advTextGradient">
                        GET FREE 2021 IMAC 24 WITH NSTS
                    </section>
                    <section class="advTextOrdinary">
                        Watch to know how<span class="_arrows">»</span> 
                    </section>
                </section>            <!-- advText -->
                <section class="advPicBox">
                    <img class="advPic" src="./img/adv/imac-segment.png">
                    <section class="_click">click</section>
                    <section class="_afterLine"></section>
                </section>
            </section>            <!-- advContainerInner -->
        </section>         <!-- advContainer -->

        <section class="crew">
            <section class="crewInfo">
                Michael Svoboda and Valeriy Karcha are the owners of New Sound Trucking School, LLC and have over 25 years combined experience in the trucking industry
            </section>            <!-- crewInfo -->
            <section class="_owners">
                <% emps.officeStuff.forEach( (officer, index) => { %>
                    <% if (officer.owner) { %>
                        <section class="ownerCard">
                            <section class="ownerInfo">
                                <% if (index % 2 === 0) { %>
                                    <img class="ownerPhoto" src='<%= officer.photo %>' alt="">
                                    <section class="positionInfo _itemsLeft">
                                        <section class="ownerName _textLeft"><%= officer.name %></section>
                                        <section class="ownerPosition _textLeft"><%= officer.title %></section>
                                    </section>
                                <% } else { %>
                                    <section class="positionInfo _itemsRight">
                                        <section class="ownerName _textRight"><%= officer.name %></section>
                                        <section class="ownerPosition _textRight"><%= officer.title %></section>
                                    </section>
                                    <img class="ownerPhoto" src='<%= officer.photo %>' alt="">
                                <% } %>
                            </section>        <!-- ownerInfo -->
                        
                            <% let type = index % 2 === 0 ? '_socialLeft' : '_socialRight' %>
                            <section class="social <%= type %>">
                                <a class="social_item" href='<%= officer.facebook %>' target="_blank">
                                    <svg class="social_icon">
                                    <use xlink:href="#facebook"></use> 
                                    </svg>
                                </a>
                                <a class="social_item" href='<%= officer.twitter %>' target="_blank">
                                    <svg class="social_icon">
                                    <use xlink:href="#twitter"></use> 
                                    </svg>
                                </a>
                                <a class="social_item" href='<%= officer.linkedIn %>' target="_blank">
                                    <svg class="social_icon">
                                    <use xlink:href="#linkedIn"></use> 
                                    </svg>
                                </a>
                                <a class="social_item" href='<%= officer.insta %>' target="_blank">
                                    <svg class="social_icon">
                                    <use xlink:href="#insta"></use> 
                                    </svg>
                                </a>
                            </section>        <!-- social -->
                        
                        </section>      <!-- ownerCard -->  
                    <% } %>           <!-- if owner END -->
                <% }) %>    <!-- emps.officeStuff.forEach -->
            </section>            <!-- _owners -->

            <section class="_office">
                <% emps.officeStuff.forEach( (officer, index) => { %>
                    <% if (!officer.owner) { %>
                        <section class="empCard">
                            <section class="empInfo">
                                <img class="empPhoto" src='<%= officer.photo %>' alt="">
                                <section class="positionInfo _itemsCenter">
                                    <section class="empName _textCenter"><%= officer.name %></section>
                                    <section class="empPosition _textCenter"><%= officer.title %></section>
                                </section>
                                
                            </section>        <!-- empInfo -->
                        
                            <section class="social _socialCenter">
                                <a class="social_item" href='<%= officer.facebook %>' target="_blank">
                                    <svg class="social_icon">
                                    <use xlink:href="#facebook"></use> 
                                    </svg>
                                </a>
                                <a class="social_item" href='<%= officer.twitter %>' target="_blank">
                                    <svg class="social_icon">
                                    <use xlink:href="#twitter"></use> 
                                    </svg>
                                </a>
                                <a class="social_item" href='<%= officer.linkedIn %>' target="_blank">
                                    <svg class="social_icon">
                                    <use xlink:href="#linkedIn"></use> 
                                    </svg>
                                </a>
                                <a class="social_item" href='<%= officer.insta %>' target="_blank">
                                    <svg class="social_icon">
                                    <use xlink:href="#insta"></use> 
                                    </svg>
                                </a>
                            </section>        <!-- social -->
                        
                        </section>      <!-- empCard -->  
                    <% } %>           <!-- if NOT an Owner END -->
                <% }) %>    <!-- emps.officeStuff.forEach -->
            </section>            <!-- _office -->

            <section class="_instuctors">
                <% emps.instStuff.forEach( (inst) => { %>
                    <section class="instCard">
                        <img class="instPhoto" src='<%= inst.photo %>' alt="">   
                        <section class="instName _textCenter"><%= inst.name %></section>
                        <section class="instPosition _textCenter"><%= inst.title %></section>
                        <section class="instLang"><%= inst.language %></section>
                        <section class="instQual-title">Qualifications</section>
                        <% inst.qualifications.forEach ((qual) => { %>
                            <section class="instQual-info"><%= qual %></section>
                        <% }) %>
                        
                        <section class="social _socialCenter">
                            <a class="social_item" href='<%= inst.facebook %>' target="_blank">
                                <svg class="social_icon">
                                <use xlink:href="#facebook"></use> 
                                </svg>
                            </a>
                            <a class="social_item" href='<%= inst.twitter %>' target="_blank">
                                <svg class="social_icon">
                                <use xlink:href="#twitter"></use> 
                                </svg>
                            </a>
                            <a class="social_item" href='<%= inst.linkedIn %>' target="_blank">
                                <svg class="social_icon">
                                <use xlink:href="#linkedIn"></use> 
                                </svg>
                            </a>
                            <a class="social_item" href='<%= inst.insta %>' target="_blank">
                                <svg class="social_icon">
                                <use xlink:href="#insta"></use> 
                                </svg>
                            </a>
                        </section>  
                    </section>      <!-- instCard -->
                <% }) %>    <!-- emps.instStuff.forEach -->
            </section>
        </section>        <!-- crew -->
    </section>    <!-- innerBox -->


    <!-- MODAL -->
    <section class="modal_mask">
        <section class="modalContainer">

            <section class="modal_window">
                <video class="aboutMACvideo" onclick="videoClick(this)">
                    <source src='./img/adv/iMac.mp4' type="video/mp4">
                </video>          <!-- videoItem -->
            </section>      <!-- modal_window -->  
            <section class="modalClose">
                close
            </section>

        </section>      <!-- modalContainer -->
    </section>      <!-- modal -->


    <!-- FOOTER -->
    <section class="_footer">
        <section class="footerContainer">
            <section class="addrBox">
                <section class="locationPhone _textLeft">253.210.0505</section>
                <a class="locationAddr _textLeft" href="http://maps.google.com/?q=7495 26TH ST E, FIFE, WA 98424" target="_blank">7495 26TH ST E,<br>FIFE, WA 98424</a>
            </section>
            <section class="callUsBox">Call Us</section>
            <section class="addrBox">
                <section class="locationPhone _textRight">253.210.0505</section>
                <a class="locationAddr _textRight" href="http://maps.google.com/?q=1920 Merrill Creek Pkwy, Everett, WA 98203" target="_blank">1920 Merrill Creek Pkwy,<br>Everett, WA 98203</a>
            </section>
        </section>     <!-- footerInner -->
    </section>    <!-- _footer -->

    <section class="emailContainer">
        <a class='_email'href="mailto:info@nstschool.com" target="_top">INFO@NSTSCHOOL.COM</a>
    </section>


    <!-- Scripts for video -->
    <script>
        function videoClick(player) {
            player.paused ? player.play() : player.pause()
        }
        const videoPlaceHolder = document.querySelector(".videoPlaceHolder")
        const aboutNSTSvideo = document.querySelector(".aboutNSTSvideo")
        const aboutMACvideo =document.querySelector(".aboutMACvideo")
        // about NSTS container click
        videoPlaceHolder.addEventListener("click", (e) => {
            videoPlaceHolder.style = "display: none"
            aboutNSTSvideo.style = "display: block"
            aboutNSTSvideo.click()
        })
        // ADV container click
        document.querySelector(".advContainerInner").addEventListener("click", (e) => {
            if (!aboutNSTSvideo.paused) { aboutNSTSvideo.pause() }
            document.querySelector("body").classList.add("no-scroll_body")
            document.querySelector("html").classList.add("no-scroll_body")
            document.querySelector(".modal_mask").classList.add("show_modal")
            if (aboutMACvideo.paused) { aboutMACvideo.play() }
        })
        // closing modal by clicking on "close"
        document.querySelector(".modalClose").addEventListener("click", (e) => {
            if (!aboutMACvideo.paused) { aboutMACvideo.pause() }
            document.querySelector("body").classList.remove("no-scroll_body")
            document.querySelector("html").classList.remove("no-scroll_body")
            document.querySelector(".modal_mask").classList.remove("show_modal")
        })
        // closing modal by clicking on mask
        document.querySelector(".modal_mask").addEventListener("click", (e) => {
            e.stopPropagation()
            if (!aboutMACvideo.paused) { aboutMACvideo.pause() }
            document.querySelector("body").classList.remove("no-scroll_body")
            document.querySelector("html").classList.remove("no-scroll_body")
            document.querySelector(".modal_mask").classList.remove("show_modal")
        })
        document.querySelector(".modal_window").addEventListener("click", (e) => {
            e.stopPropagation()
        })
        
        // comment next line and add video thumb, if autoplay is not needed
        // videoPlaceHolder.click()
    </script>

 
    
 
    
</body>
